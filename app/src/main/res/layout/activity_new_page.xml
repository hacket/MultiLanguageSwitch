<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NewPageActivity">


    <TextView
        android:id="@+id/tv_locale"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:gravity="top" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="@string/new_page_text" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_change_auto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/change_to_auto" />

        <Button
            android:id="@+id/btn_change_zh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/change_to_zh" />

        <Button
            android:id="@+id/btn_change_en"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/change_to_en" />
    </LinearLayout>

</RelativeLayout>